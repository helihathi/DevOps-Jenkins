#!/usr/bin/env groovy
pipeline{
    agent any
    tools{
        maven 'MavenProject3'
     }
    stages{
        stage('Validate Maven Application'){
            steps{
                script{
	                sh 'mvn validate'
                }
            }
        }
        stage('Compile Maven Application'){
            steps{
                script{
	                sh 'mvn compile'
                }
            }
        }
        stage('Test Maven Application'){
            steps{
                script{
	                sh 'mvn test'
                }
            }
        }
        stage('Package Maven Application'){
            steps{
                script{
	                sh 'mvn package'
                }
            }
        }
    }
}
