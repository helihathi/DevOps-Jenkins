#!/usr/bin/env groovy

pipeline{
    agent any
    stages{
        stage('Validate Maven Application'){
            steps{
                script{
	                bat 'mvn validate'
                }
            }
        }
        stage('Compile Maven Application'){
            steps{
                script{
	                bat 'mvn compile'
                }
            }
        }
        stage('Test Maven Application'){
            steps{
                script{
	                bat 'mvn test'
                }
            }
        }
        stage('Package Maven Application'){
            steps{
                script{
	                bat 'mvn package'
                }
            }
        }
    }
}
