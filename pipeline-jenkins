pipeline {
    agent any
    tools {
        maven 'Maven' // Use the configured Maven installation in Jenkins
    }
    stages {
        stage('Validate Maven Application') {
            steps {
                sh 'mvn validate'
            }
        }
        stage('Compile Maven Application') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test Maven Application') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package Maven Application') {
            steps {
                sh 'mvn package'
            }
        }
    }
}
